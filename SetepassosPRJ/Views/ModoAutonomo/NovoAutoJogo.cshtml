
@{
    ViewData["Title"] = "Novo Jogo Autónomo";
}

<h1>Jogo Autónomo</h1>

<div class="row">
    <div class="col-md-9">
        @using (Html.BeginForm("NovoAutoJogo", "ModoAutonomo"))
        {
        <div class="form-group">
            <label>Modo autónomo:</label> <br />
            <input name="rondas" type="radio" value="3" checked /> 3 rondas <br />
            <input name="rondas" type="radio" value="7"/> 7 rondas <br />
            <input name="rondas" type="radio" value="50"/> Sem medo
        </div>
        <div class="form-group">
            <button type="submit" class="btn grad form-control">Iniciar Jogo</button>
        </div>
        }
    </div>
</div>

