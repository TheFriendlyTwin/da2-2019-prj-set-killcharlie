
@{
    ViewData["Title"] = "Novo Jogo Autónomo";
}

<h1>Jogo Autónomo</h1>

<div class="row">
    <div class="col-md-9">
        @using (Html.BeginForm("NovoAutoJogo", "ModoAutonomo"))
        {
            <div class=" col-md-6 form-group">
                <label>Modo autónomo:</label> <br /> <br /> <br />
                <input name="rondas" type="radio" value="3" checked /> 3 rondas <br /> <br />
                <input name="rondas" type="radio" value="7" /> 7 rondas <br /> <br />
                <input name="rondas" type="radio" value="50" /> Sem medo
            </div>
            <div class="col-md-3">
                <img src="~/images/minicottonmouth.png" />
                <ul>
                    <li>
                        <img src="~/images/miniheart.png" class="text-left">
                        <img src="~/images/miniheart.png" class="text-left">
                        <img src="~/images/miniheart.png" class="text-left">
                    </li>
                    <li>
                        <img src="~/images/minisword.png" class="text-left">
                        <img src="~/images/minisword.png" class="text-left">
                        <img src="~/images/minisword.png" class="text-left">
                    </li>
                    <li>
                        <img src="~/images/minitrevo.png" class="text-left">
                        <img src="~/images/minitrevo.png" class="text-left">
                        <img src="~/images/minitrevo.png" class="text-left">
                    </li>
                </ul>
            </div>
            <div class="form-group">
                <button type="submit" class="btn grad form-control">Iniciar Jogo</button>
            </div>
        }
    </div>
</div>

