@model SetepassosPRJ.Models.Jogo
@{
    ViewData["Title"] = "Score";
}

<div class="row">
    <div class="col-md-6">
        <table class="table table-bordered table-hover table-condensed" id="HighScore">
            <tr>
                <th> Nome do Jogador</th>
                <td>@Model.Utilizador</td>
            </tr>
            <tr>
                <th>Chave</th>
                <td>@if (@Model.Chave)
                {
                    @:Encontrada
                }
                else
                {
                    @:Não encontrada
                }</td>
            </tr>
            <tr>
                <th>Nrº Inimigos Derrotados</th>
                <td>@Model.NrInimigosVencidos</td>
            </tr>
            <tr>
                <th>Nrº Fugas do Inimigo</th>
                <td>@Model.NrFugasInimigo</td>
            </tr>
            <tr>
                <th>Nrº Investigações na área</th>
                <td>@Model.NrExaminacoesArea</td>
            </tr>
            <tr>
                <th>Nrº Itens Encontrados</th>
                <td>@Model.NrItensEncontrados</td>
            </tr>
            <tr>
                <th>Nrº Poções Usadas/Totais</th>
                <td>@Model.NrPocoesUsadas/@Model.PocoesVida</td>
            </tr>
            <tr>
                <th>Nrº de Recuos</th>
                <td>@Model.NrRecuos</td>
            </tr>
            <tr>
                <th>Nrº de Ataques</th>
                <td>@Model.NrAtaques</td>
            </tr>
            <tr>
                <th>Pontos de vida</th>
                <td>@Model.PontosVida</td>
            </tr>
            <tr>
                <th>Resultado Final</th>
                <td>@if (Model.Resultado == RoundResult.SuccessVictory)
                {
                    @:Vitória
                }
                else
                {
                    @:Derrota
                }
                </td>
            </tr>
            <tr>
                <th>Score</th>
                <td>@Model.Score</td>
            </tr>
        </table>
    </div>
    <div class="col-md-6">
        @if (Model.Resultado == RoundResult.GameHasEnded)
        {
            <img src="~/images/Game Over.gif" />
        }
        else if (Model.Resultado == RoundResult.SuccessVictory)
        {
            <img src="~/images/TarantinoCartoon.png" />
        }
        else
        {
            <img src="~/images/chicken.gif" />
        }
    </div>
</div>
