@model SetepassosPRJ.Models.NovoJogo
@{
    ViewData["Title"] = "Novo Jogo";
}

<h1>Novo Jogo</h1>

<form asp-action="NovoJogo" method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="Utilizador">Utilizador:</label> <br />
        <input asp-for="Utilizador" />
    </div>
    <div>
        <label asp-for="PerfilHeroi">Perfil</label> <br />
        <select asp-for="PerfilHeroi">
            <option value="BlackMamba">Black Mamba</option>
            <option value="Cottonmouth">Cottonmouth</option>
            <option value="Copperhead">Copperhead</option>
        </select> <br />
    </div>
    <button type="submit" class="btn btn-primary">Iniciar Jogo</button>
</form>

<div class="jumbotron" text-center>
    <div id="PerfilHeroicarousel" class="carousel slide" data-ride="carousel">
        <!--Indicators – Um <li> por cada slide com o slide-to diferente -->
        <ol class="carousel-indicators">
            <li data-target="#PerfilHeroicarousel" data-slide-to="0" class="active"></li>
            <li data-target="#PerfilHeroicarousel" data-slide-to="1" class="active"></li>
            <li data-target="#PerfilHeroicarousel" data-slide-to="2" class="active"></li>
        </ol>
        <!--Slides: um <div> com a classe “item” por cada slide -->
        <div class="carousel-inner">
            <div class="item active">
                <!--imagem-->
                <img src="~/css/UmaThurmanMini.png" class="img-responsive center-block">
                <div class="carousel-caption">
                    <h1>Black Mamba</h1>
                </div>
            </div>
            <div class="item" >
                <!--imagem-->
                <img src="~/css/copperhead.png" class="img-responsive center-block">
                <div class="carousel-caption">
                    <h1>Copperhead</h1>
                </div>
            </div>
            <div class="item">
                <!--imagem-->
                <img src="~/css/cottonmouth.png" class="img-responsive center-block">
                <div class="carousel-caption">
                    <h1>Cottonmouth</h1>
                </div>
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#PerfilHeroicarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#PerfilHeroicarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
    </div>

</div>
