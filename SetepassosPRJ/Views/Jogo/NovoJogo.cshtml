@model SetepassosPRJ.Models.NovoJogo
@{
    ViewData["Title"] = "Novo Jogo";
}

<h1>Regista-te e joga!</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="NovoJogo" method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Utilizador">Utilizador:</label> <br />
                <input asp-for="Utilizador" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="PerfilHeroi">Perfil</label> <br />
                <select asp-for="PerfilHeroi" class="form-control">
                    <option value="S">Black Mamba</option>
                    <option value="W">Cottonmouth</option>
                    <option value="B">Gogo Yurabi</option>
                </select> <br />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-danger form-control">Iniciar Jogo</button>
            </div>
        </form>
    </div>
</div>

<div class="jumbotron" text-center>
    <div id="PerfilHeroicarousel" class="carousel slide" data-ride="carousel">
        <!--Indicators – Um <li> por cada slide com o slide-to diferente -->
        <ol class="carousel-indicators">
            <li data-target="#PerfilHeroicarousel" data-slide-to="0" class="active"></li>
            <li data-target="#PerfilHeroicarousel" data-slide-to="1" class="active"></li>
            <li data-target="#PerfilHeroicarousel" data-slide-to="2" class="active"></li>
        </ol>
        <!--Slides: um <div> com a classe “item” por cada slide -->
        <div class="carousel-inner">
            <div class="item active">
                <!--imagem-->
                <img src="~/images/mediumblackmamba.png" class="img-responsive center-block">
                <div class="carousel-caption">
                    <h1>Black Mamba</h1>
                </div>
            </div>
            <div class="item" >
                <!--imagem-->
                <img src="~/images/mediumgogoyarubi.png" class="img-responsive center-block">
                <div class="carousel-caption">
                    <h1>Gogo Yurabi</h1>
                </div>
            </div>
            <div class="item">
                <!--imagem-->
                <img src="~/images/mediumcottonmouth.png" class="img-responsive center-block">
                <div class="carousel-caption">
                    <h1>Cottonmouth</h1>
                </div>
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#PerfilHeroicarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#PerfilHeroicarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
    </div>

</div>
