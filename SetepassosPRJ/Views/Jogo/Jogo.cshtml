@model GameApiResponse;
@{
    ViewData["Title"] = "7 Passos";
}

<h3 class="titulo">7 Passos</h3>
<p>Salva o Quentin!</p>

<div class="row">
    <div class="col-md-12 corredor">
        @if (Model.FoundEnemy)
        {
            <img src="~/images/minicharlieangels.png" alt="AnjosCharlie" title="Anjos de Charlie" class="inimigo" />
        }
        @if (Model.PlayerClass == "S")
        {
            <img src="~/images/mediumblackmamba.png" alt="Black Mamba" title="Black Mamba" class="heroi" />
        }
        else if (Model.PlayerClass == "W")
        {
            <img src="~/images/mediumcottonmouth.png" alt="Cottonmouth" title="Cottonmouth" class="heroi" />
        }
        else
        {
            <img src="~/images/mediumgogoyarubi.png" alt="GogoYurabi" title="Gogo Yurabi" class="heroi" />
        }
    </div>
</div>

<div class="row elementos">
    <div class="col-md-4">
        <strong><u>@Model.PlayerName</u>  -  </strong>
        <strong><u> @Model.PlayerClass</u> <br /></strong>
        @*@for (int coracoes = 0; coracoes < Model.PontosVida; coracoes++)
        {
            <img src="~/images/miniheart.png" alt="PontosVida" title="Pontos de vida" />
        }
        <br />
        @if (Model.PontosVida < 2)
        {
            @:Estás com poucos pontos de vida! Atenção à tua cabeça! <br />
        }
        else
        {
            @:Ainda tens pontos de vida suficientes! Continua assim! <br />
        }
        @for (int espadas = 0; espadas < Model.PontosAtaque; espadas++)
        {
            <img src="~/images/minisword.png" alt="PontosAtaque" title="Pontos de ataque" />
        }<br />
        @for (int trevos = 0; trevos < Model.PontosSorte; trevos++)
        {
            <img src="~/images/minitrevo.png" alt="PontosSorte" title="Pontos de sorte" />
        } <br />

        @for (int pocoes = 0; pocoes < Model.PocoesVida; pocoes++)
        {
            <img src="~/images/minipotion.png" alt="Pocao" title="Poção de vida" />
        }
        @if (Model.FoundPotion)
        {
            @:Acabaste de encontrar uma poção!
        }
        else
        {
            @:Nesta área não há poções!
        }*@
    </div>
    <div class="col-md-4">
      
        <br />@if (Model.FoundKey)
        {
            <img src="~/images/miniKey.png" alt="Chave" title="Chave!" />
        }
        else
        {
            @:Tens de encontrar a chave!
        }
        <br />
        <strong>Moedas de ouro: </strong>@Model.GoldFound
        <br />
        <strong>Posição do herói: </strong><strong class="alert-info">@Model.PosicaoHeroi</strong>
        <br />
        Faltam apenas <strong class="alert-info">@Model.DistanciaPorta</strong> passos até ao Quentin!
    </div>
    <div class="col-md-4"> 
        <div>
            @if (Model.FoundEnemy)
            {
                <strong class="alert-danger">Cuidado! O salto alto das anjos de Charlie é pontiagudo! Escolhe o que fazer já:</strong> <br />
                <button type="submit" class="btn btn-danger">Atacar o inimigo!</button> <br />
                <button type="submit" class="btn btn-info">Fugir!</button> <br />
                <button type="submit" class="btn btn-success">Beber um poção de vida</button>
            }
            else
            {
                <strong>Não há inimigos nesta área! Escolhe o que fazer:</strong> <br />
                <button type="submit" class="btn btn-warning">Dar um passo em frente!</button> <br />
                <button type="submit" class="btn btn-info">Examinar Área</button> <br />
                <button type="submit" class="btn btn-success">Beber um poção de vida</button>
            }
        </div>
    </div>
</div>

